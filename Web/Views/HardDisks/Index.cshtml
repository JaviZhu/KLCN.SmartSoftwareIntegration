            //    $("#sidebar-menu").find("ul").find("li:eq(" + menu[0] + ")").find("a").removeClass().addClass("waves-effect waves-light active");
        });
        TableManageButtons.init();
        function downdloadTemplate() {
            location.href = "/downfiles/Download?filename=wwwroot/assets/download/harddisk/Hard Disk Templete.xlsx";
        }
        function funSubmit(obj) {
            $(obj).prop("disabled", true);
            $("#i_ref").show();
            $("#form1").ajaxSubmit({
                success: function (data) {
                    if (data.result == "Error") {
                        $("#i_ref").hide();
                        $(obj).prop("disabled", false);
                        $.Notification.notify('error', 'top center', 'Upload Notification', data.info);
                    }
                    else {
                        $("#i_ref").hide();
                        swal({
                            title: "Upload",
                            text: data.info,
                            type: "success"
                        },
                            function () {
                                location.href = location.href;
                            });
                    }
                }
            });
        }
        function funCheck(obj) {
            if ($(obj).prop('checked')) {
                $("#datatable-buttons tbody").find("input[type=checkbox]").prop('checked', true);

            }
            else {
                $("#datatable-buttons tbody").find("input[type=checkbox]").prop('checked', false);

            }
        }
        function funDel() {
            var cks = $("#datatable-buttons").find("input[type=checkbox]:checked");
            if ($(cks).length == 0) {

                $.Notification.notify('error', 'top center', 'Delete Notification', "Please choose delete items !");
            }
            else {
                swal({
                    title: "Are you sure?",
                    text: "Your will not be able to recover this imaginary file!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-danger",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: false
                },
                    function () {
                        var barcode = "all";
                        if (!$("#ckb_all").prop("checked")) {
                            barcode = "";
                            var partial = $("#datatable-buttons tbody").find("input[type=checkbox]:checked");
                            $.each(partial, function () {
                                barcode += "'" + $(this).prop("value") + "',";
                            });
                        }
                        $.ajax({
                            url: "/HardDisks/DeleteMulitple",
                            dataType: "json",
                            async: true,
                            data: "barcode=" + barcode,
                            type: "post",
                            success: function (data) {
                                if (data.result == "Error") {
                                    swal("Deleted!", data.info, "error");
                                    //$.Notification.notify('error', 'top center', 'Delete Notification', data.info);
                                } else {
                                    swal({
                                        title: "Deleted",
                                        text: data.info,
                                        type: "success"
                                    },
                                        function () {
                                            location.href = location.href;
                                        });
                                    //$.Notification.notify('success', 'top center', 'Delete Notification', data.info);
                                    
                                }
                            },
                            complete: function () {
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                            }
                        });
                        //
                    });


            }
        }
